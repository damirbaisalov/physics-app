<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_app"
    tools:context=".quiz_options.QuizOptionsActivity">

    <Button
        android:id="@+id/activity_quiz_options_first_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1-ші нҰсқа"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_button_enabled"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/activity_quiz_options_second_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2-ші нұсқа"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_button_enabled"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/activity_quiz_options_first_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>